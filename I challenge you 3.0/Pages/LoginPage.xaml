<Page x:Class="I_challenge_you_3._0.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:I_challenge_you_3._0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Width="1000"
      Height="600"
      Title="LoginPage"
      Background="LightSalmon">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label 
            Content="Login"
            HorizontalAlignment="Center" 
            Margin="0,51,0,0"
            VerticalAlignment="Top" 
            FontWeight="Bold"
            FontSize="30"
            Grid.Row="0"
            />

        <Label 
            Content="Username:"
            HorizontalAlignment="Left" 
            Margin="301,38.2,0,0"
            VerticalAlignment="Top" 
            FontWeight="Bold"
            FontSize="18"
            Grid.Row="1"
            />

        <TextBox x:Name="username"
            HorizontalAlignment="Center" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="164"
            Margin="321,41,276.6,0" 
            Height="31"
            FontSize="18" 
            Grid.Row="1"
            />
        <Label 
            Content="Password:"
            HorizontalAlignment="Left" 
            Margin="301,91.2,0,0"
            VerticalAlignment="Top" 
            FontWeight="Bold"
            FontSize="18" RenderTransformOrigin="1.552,0.477"
            Grid.Row="1"
            />
        <PasswordBox
            Name="password"
            HorizontalAlignment="Center"
            Margin="321,91,276.6,0"
            VerticalAlignment="Top"
            Width="164"
            Height="31"
            Grid.Row="1"/>
        <Button
            x:Name="Login"
            Content="Login" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top" 
            Margin="452,35.2,441.6,0"
            Height="35"
            Width="100" 
            FontWeight="Bold"
            FontSize="18" 
            Click="Login_Click"
            Grid.Row="2"
           />
    </Grid>
</Page>
