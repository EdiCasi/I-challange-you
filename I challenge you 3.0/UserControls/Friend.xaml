<UserControl x:Class="I_challenge_you_3._0.UserControls.Friend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:I_challenge_you_3._0.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White" Height="89.573" Width="500">
    <Grid>
        <Label 
            HorizontalAlignment="Left"
            Margin="38,21,0,0" 
            VerticalAlignment="Top" 
            Height="36"
            Width="249"
            FontSize="18"
            Content="{Binding displayedFriend.Username}"
            />
        <Button 
            x:Name="ProfileButton"
            Content="Profile" 
            HorizontalAlignment="Left"
            Margin="342,28,0,0" 
            VerticalAlignment="Top"
            Width="120"
            FontSize="16" Height="29" Click="GoToProfile"
            />
    </Grid>
</UserControl>
