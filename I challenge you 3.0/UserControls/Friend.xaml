<UserControl x:Class="I_challenge_you_3._0.UserControls.Friend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:I_challenge_you_3._0.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="500"
             Width="500">
    <Border 
        Background="Coral"
        CornerRadius="15">
        <Grid Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width= "*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Border 
                    CornerRadius="50"
                    Grid.Column="0"
                    Height="60"
                    Width="60"
                    BorderBrush="Black"
                    BorderThickness="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 0">
                <Border.Background>
                    <ImageBrush 
                                Stretch="Fill"
                                ImageSource="{Binding displayedFriend.Image}"/>
                </Border.Background>
            </Border>

            <Label 
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Height="36"
                Width="200"
                FontSize="18"
                Content="{Binding displayedFriend.Username}"
                />
            <Button 
                Grid.Column="2"
                x:Name="ProfileButton"
                Content="Profile" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="100"
                Height="35"
                FontSize="18"
                Click="GoToProfile">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter 
                        Property="CornerRadius"
                        Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Grid.Column="3"
                Height="40"
                Width="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Margin="0 0 0 0"
                Click="RemoveFriend_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter 
                        Property="CornerRadius"
                        Value="10"></Setter>
                    </Style>
                </Button.Resources>
                <Image Height="15" Source="pack://application:,,,/Resources/Images/XIcon.png"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
